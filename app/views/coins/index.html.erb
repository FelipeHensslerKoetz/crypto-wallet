<p style="color: green"><%= notice %></p>

<h1>Coins</h1>

<div id="coins">
<table>
 <thead>
    <tr>
      <th>Description</th>
      <th>Acronym</th>
      <th>Image</th>
      <th>Show</th>
      <th>New Coin</th>
    </tr>
  </thead>
<tbody>
  <% @coins.each do |coin| %>
    <tr>
      <td><%= coin.description %></td>
      <td><%= coin.acronym %></td>
      <td><%= image_tag coin.url_image, size: '25x25'%></td>
      <td><%= link_to "Show this coin", coin %></td>
      <td><%= link_to "New coin", new_coin_path %></td>
    </tr>
  <% end %>
</tbody>
</table>
</div>


